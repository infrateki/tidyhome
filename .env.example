# ================================
# TidyHome Environment Configuration
# ================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# ================================
# Database Configuration (PostgreSQL/Neon)
# ================================
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=

# ================================
# Application Settings
# ================================
# Node environment: development | production | test
NODE_ENV=production

# Application port (for local development)
PORT=3000

# Session secret for Express (generate a random string)
SESSION_SECRET=

# ================================
# Analytics & Monitoring
# ================================
# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX
# Find in: Google Analytics > Admin > Data Streams > Your Web Stream
VITE_GA4_MEASUREMENT_ID=

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# ================================
# External Services
# ================================
# Email service configuration (if using email features)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@tidyhome.com

# WhatsApp Business API (if integrated)
WHATSAPP_PHONE=
WHATSAPP_API_KEY=

# Instagram API (if showing feed)
INSTAGRAM_ACCESS_TOKEN=

# ================================
# API Keys & Secrets
# ================================
# Add any third-party API keys here
# STRIPE_SECRET_KEY=
# GOOGLE_MAPS_API_KEY=
# RECAPTCHA_SECRET_KEY=

# ================================
# Feature Flags
# ================================
# Enable/disable features
ENABLE_NEWSLETTER=true
ENABLE_CONTACT_FORM=true
ENABLE_ANALYTICS=true

# ================================
# URLs & Domains
# ================================
# Your production URL (no trailing slash)
VITE_APP_URL=https://tidyhome.com

# API URL (if different from app URL)
VITE_API_URL=https://api.tidyhome.com

# ================================
# Development Only
# ================================
# These are only used in development
# VITE_DEBUG=false
# VITE_MOCK_API=false
